<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--
      This drawable creates a linear gradient background.
      The angle is set to 90 degrees, so the colors transition from bottom to top.
      It starts with a deep teal, moves to a vibrant green, and ends with your main blue color.
      This creates a professional and calming "live" effect that matches your app's theme.
    -->
    <gradient
        android:angle="90"
        android:startColor="@color/lightGray"
        android:centerColor="@color/green"
        android:endColor="@color/teal_200"
        android:type="linear" />
</shape>