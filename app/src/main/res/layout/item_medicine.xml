<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/medicineImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_search_view"
            android:padding="4dp"
            tools:src="@drawable/logo" /> <!-- Use a placeholder from your project -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Medicine Name -->
            <TextView
                android:id="@+id/medicineNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Panadol Extra"/>

            <!-- Price -->
            <TextView
                android:id="@+id/medicinePriceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:text="Rs. 120.00"/>

            <!-- Spacer for visual separation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Stock, Batch, and Expiry Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/medicineStockText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    tools:text="Stock: 50"/>

                <!-- FIXED: Added Batch Number TextView -->
                <TextView
                    android:id="@+id/batchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginStart="8dp"
                    tools:text="Batch: B5501"/>
            </LinearLayout>

            <!-- FIXED: Added Expiry Date TextView -->
            <TextView
                android:id="@+id/expiryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                tools:text="Expiry: 12/2025"/>

            <!-- Pharmacy Info (Hidden, but available if needed) -->
            <TextView
                android:id="@+id/pharmacyInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Pharmacy ID: PH001"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
